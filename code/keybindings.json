  //     "when": "editorTextFocus"
  // },
  // {
  //     "key": "cmd+k cmd+i",
  //     "command": "namespaceResolver.import"
  // },

  /**
   * Hide Toaster Notifications
   **/
  {
    "key": "escape",
    "command": "notifications.hideToasts",
    "when": "notificationToastsVisible"
  },
  {
    "key": "cmd+m",
    "command": "workbench.files.action.focusFilesExplorer"
  }
]
